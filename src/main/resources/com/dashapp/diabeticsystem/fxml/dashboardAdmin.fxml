<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.dashapp.diabeticsystem.controllers.admin.DashboardAdminController"
            fx:id="borderpane"
            prefHeight="400.0" prefWidth="600.0">


    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Benvenuto admin" styleClass="title"/>

            <VBox>
                <Label text="Crea Diabetologo" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <HBox spacing="10">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <TextFlow>
                            <Text text="Nome:" styleClass="field-label"/>
                            <Text text="*" styleClass="required"/>
                        </TextFlow>
                        <TextField fx:id="textNome" maxWidth="Infinity"/>
                    </VBox>
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <TextFlow>
                            <Text text="Cognome:" styleClass="field-label"/>
                            <Text text="*" styleClass="required"/>
                        </TextFlow>
                        <TextField fx:id="textCognome" maxWidth="Infinity"/>
                    </VBox>
                </HBox>
                <HBox spacing="10">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <TextFlow>
                            <Text text="Email" styleClass="field-label"/>
                            <Text text="*" styleClass="required"/>
                        </TextFlow>
                        <TextField fx:id="textEmail" maxWidth="Infinity"/>
                    </VBox>
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <TextFlow>
                            <Text text="Codice fiscale:" styleClass="field-label"/>
                            <Text text="*" styleClass="required"/>
                        </TextFlow>
                        <TextField fx:id="textCf" maxWidth="Infinity"/>
                    </VBox>
                </HBox>

                <HBox spacing="10">
                    <TextFlow>
                        <Text text="Sesso:" styleClass="field-label"/>
                        <Text text="*" styleClass="required"/>
                    </TextFlow>
                    <fx:define>
                        <ToggleGroup fx:id="gruppoSesso" />
                    </fx:define>

                    <RadioButton text="Maschio" toggleGroup="$gruppoSesso"  selected="true" userData="M" />
                    <RadioButton text="Femmina" toggleGroup="$gruppoSesso"  userData="F" />

                </HBox>

                <Button text="Crea nuovo diabetologo" onAction="#createNewDiabetologo" styleClass="loginButton"/>
                <TextFlow>
                    <Text text="I campi contrassegnati con il simbolo " styleClass="text-grey"/>
                    <Text text="*" styleClass="required"/>
                    <Text text=" sono obbligatori per il corretto inserimento dei dati." styleClass="text-grey" />
                </TextFlow>
            </VBox>
        </VBox>
    </center>
</BorderPane>
