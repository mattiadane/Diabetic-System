<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.dashapp.diabeticsystem.controllers.dashboards.DashboardAdminController"
            fx:id="borderpane"
            prefHeight="400.0" prefWidth="600.0">


    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Benvenuto admin" styleClass="title"/>

            <VBox>
                <Label text="Nome del nuovo diabetologo:*" />
                <TextField fx:id="textNome" />

                <Label text="Cognome del nuovo diabetologo:*" />
                <TextField fx:id="textCognome" />

                <Label text="Codice fiscale  del nuovo diabetologo:*" />
                <TextField fx:id="textCf" />

                <Label text="Email del nuovo diabetologo:*" />
                <TextField fx:id="textEmail" />

                <Label text="Sesso del nuovo diabetologo"/>
                <fx:define>
                    <ToggleGroup fx:id="gruppoSesso" />
                </fx:define>

                <RadioButton text="Maschio" toggleGroup="$gruppoSesso"  selected="true" userData="M" />
                <RadioButton text="Femmina" toggleGroup="$gruppoSesso"  userData="F" />

                <Button text="Crea nuovo diabetologo" onAction="#createNewDiabetologo" styleClass="loginButton"/>
                <Label text="Legenda:" styleClass="title"/>
                <Label text="I campi contrassegnati con il simbolo (*) sono obbligatori per il corretto inserimento dei dati."/>

            </VBox>
        </VBox>
    </center>
</BorderPane>
