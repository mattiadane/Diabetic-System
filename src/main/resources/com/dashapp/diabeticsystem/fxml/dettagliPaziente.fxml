<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0"
            fx:controller="com.dashapp.diabeticsystem.controllers.DettagliPazienteController"
>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <center>



       <!-- spazio per i dati del paziente (livelli di insulina) -->
        <VBox>
            <Label text="" fx:id="main_label" styleClass="title"/>
        </VBox>

        <!-- spazio per le terapie associate -->
        <VBox>
            <Label text="Andamento dei livelli di glicemia" styleClass="title"/>
        </VBox>


        <VBox>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
            <Label text="Terapie associate:" styleClass="title"/>
            <TableView fx:id="tabella_terapie" styleClass="table-view">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn text="Farmaco"  fx:id="col_nome"/>
                    <TableColumn text="Dosaggio"  fx:id="col_dosaggio"/>
                    <TableColumn text="# Assunzioni" fx:id="col_assunzioni" />
                    <TableColumn text="Periodo" fx:id="col_periodo" />
                    <TableColumn text="Modifica" fx:id="modifica" />
                    <TableColumn text="Elimina"  fx:id="elimina" />
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
