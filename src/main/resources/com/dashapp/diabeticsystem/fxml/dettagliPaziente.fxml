<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ScrollPane?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0"
            fx:controller="com.dashapp.diabeticsystem.controllers.diabetologo.DettagliPazienteController">

    <center>
        <!-- ScrollPane che avvolge l'intero contenuto -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
            <VBox spacing="20">
                <!-- padding del VBox -->
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <!-- DatePicker settimanale -->
                <DatePicker fx:id="settimana" onAction="#handleSettimana"/>

                <!-- Titolo e grafico -->
                <Label text="Livelli di insulina:" styleClass="title"/>
                <LineChart fx:id="chart" prefHeight="500.0" maxHeight="650.0">
                    <xAxis>
                        <CategoryAxis label="Giorni"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Valore (mg/dL)"/>
                    </yAxis>
                </LineChart>

                <!-- Terapie -->
                <Label text="Terapie associate:" styleClass="title"/>
                <TableView fx:id="tabella_terapie" styleClass="table-view">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn text="Farmaco" fx:id="col_nome"/>
                        <TableColumn text="Dosaggio" fx:id="col_dosaggio"/>
                        <TableColumn text="# Assunzioni" fx:id="col_assunzioni"/>
                        <TableColumn text="Periodo" fx:id="col_periodo"/>
                        <TableColumn fx:id="modifica"/>
                        <TableColumn fx:id="elimina"/>
                    </columns>
                </TableView>

                <!-- Informazioni relative al paziente -->
                <Label text="Informazioni sul paziente" styleClass="title"/>
                <Label text="Fattori di rischio:"/>
                <ListView fx:id="fr" prefHeight="200" prefWidth="250"/>

                <Label text="ComorbitÃ :"/>
                <ListView fx:id="c" prefHeight="200" prefWidth="250"/>

                <Label text="Patologie pregresse:"/>
                <ListView fx:id="pg" prefHeight="200" prefWidth="250"/>

            </VBox>
        </ScrollPane>
    </center>


</BorderPane>
