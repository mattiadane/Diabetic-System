<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.dashapp.diabeticsystem.controllers.AggiungiLivelloInsulinaController"
            prefHeight="400.0" prefWidth="600.0"
            fx:id="borderpane"
>
    <center>
        <VBox>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Aggiungi livello di insulina" styleClass="title" />

            <Label text="Livello (in mg):*" />
            <TextField fx:id="textLivello" prefWidth="200"/>

            <Label text="Momento del giorno:*" />
            <ComboBox fx:id="comboBoxMomento" layoutX="50" layoutY="50" prefWidth="200" />

            <Label text="Ora (HH:mm):*" />
            <TextField fx:id="timeText" promptText="ex: 14:30, 15:50, 09:32, ..."/>

            <Button text="Aggiungi livello" styleClass="loginButton" onAction="#handleAggiungiLivello"/>

            <!-- sezione delle legenda -->
            <VBox>
                <Label text="Legenda:" styleClass="title"/>
                <Label text="I campi contrassegnati con il simbolo (*) sono obbligatori per il corretto inserimento dei dati."/>
                <Label text="Tutti gli altri dati sono facoltativi."/>
            </VBox>
        </VBox>
    </center>

</BorderPane>
