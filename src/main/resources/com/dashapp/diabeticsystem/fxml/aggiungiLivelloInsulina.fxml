<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.dashapp.diabeticsystem.controllers.AggiungiLivelloInsulinaController"
            prefHeight="400.0" prefWidth="600.0">Ã 

    <center>
        <VBox>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Aggiungi livello di insulina" styleClass="title" />

            <Label text="Livello (in mg):" />
            <TextField fx:id="textLivello"/>

            <Label text="Momento del giorno: " />
            <ComboBox fx:id="comboBoxMomento" layoutX="50" layoutY="50" prefWidth="200">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Prima di pranzo"/>
                        <String fx:value="Dopo pranzo"/>
                        <String fx:value="Prima di cena"/>
                        <String fx:value="Dopo cena"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <Button text="Aggiungi livello" styleClass="loginButton" onAction="#handleAggiungiLivello"/>
        </VBox>
    </center>

</BorderPane>
