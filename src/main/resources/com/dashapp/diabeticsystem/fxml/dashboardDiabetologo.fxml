<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.dashapp.diabeticsystem.controllers.dashboards.DashboardDiabetologoController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- importo la sidebar -->
    <left>
        <VBox styleClass="sidebar">
            <Button text="Home" fx:id="homeButton" styleClass="sideButtons"/>
            <Button text="Pazienti" fx:id="pazientiButton" styleClass="sideButtons" />
            <Button text="Impostazioni" fx:id="settingsButton" styleClass="sideButtons"/>
            <Button text="Logout" fx:id="logoutButton" styleClass="sideButtons" onAction="#logout"/>
        </VBox>
    </left>
    <center>
        <VBox alignment="TOP_LEFT">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label fx:id="benvenuto" text="benvenuto" styleClass="title"/>
            <Button text="Crea Paziente" onAction="#handleCreaPaziente" fx:id="buttonCreaPaziente" />
        </VBox>
    </center>
</BorderPane>
