<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.dashapp.diabeticsystem.controllers.SettingsController"
            prefHeight="400.0" prefWidth="600.0"
            fx:id="borderPane"
>


    <center>
        <VBox alignment="TOP_LEFT">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label  text="Impostazioni" styleClass="title"/>

            <Label text="Nome:" />
            <TextField fx:id="textNome"/>

            <Label text="Cognome: " />
            <TextField fx:id="textCognome" />

            <Label text="Email: " />
            <TextField fx:id="textEmail" />

            <Label text="Nuova password: " />
            <PasswordField fx:id="textNewPassword" />

            <Label text="Conferma nuova password: "/>
            <PasswordField fx:id="textConfirmPassword" />
            <Button text="Aggiorna dati" onAction="#handleUpdateData" styleClass="loginButton"/>
        </VBox>
    </center>

</BorderPane>
